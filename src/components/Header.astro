---
const base = import.meta.env.BASE_URL;
---

<header>
  <nav>
    <a href={base} class="logo">
      <img src={`${base}/logo.svg`} alt="Logo" />
    </a>
    <a href={`${base}/mypage`} class="mypage">
      <img src={`${base}/icons/user.svg`} alt="My Page" />
    </a>
  </nav>
</header>

<style>
  header {
    background-color: #f8f9fa;
    padding: 1rem 2rem;
    border-bottom: 1px solid #e7e7e7;
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .logo img {
    height: 40px;
  }
  .mypage img {
    height: 30px;
  }
</style>
