	<div class="search-container">
		<img src={`${base}/icons/search.svg`} alt="Search" class="search-icon" />
		<input type="search" id="search-box" placeholder="Ê§úÁ¥¢">
	</div>

	<div class="slideshow-container">
		<div class="slide fade">
			<img src={`${base}/jumpallstar.jpg`} alt="Jump All Star">
		</div>
		<div class="slide fade">
			<img src={`${base}/jyannmaga.jpg`} alt="Jyannmaga">
		</div>
		<div class="slide fade">
			<img src={`${base}/ribon.jpeg`} alt="Ribon">
		</div>
	</div>

	<SubHeader />

	<div id="projects-section">
		<section>
			<h2>‰ΩúÂìÅ</h2>

			<div class="filter-container" id="project-category-filters">
				<strong>„Ç´„ÉÜ„Ç¥„É™„Éº:</strong>
				<button class="filter-btn active" data-category="All">„Åô„Åπ„Å¶</button>
				{uniqueProjectCategories.map(category => (
					<button class="filter-btn" data-category={category}>{category}</button>
				))}
			</div>

			<div class="project-list">
				{projects.map((project, index) => (
					<div class="card" data-categories={project.category.join(' ')} data-id={project.id}>
