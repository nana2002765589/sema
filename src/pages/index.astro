---
import Layout from '../layouts/Layout.astro';
import projectsData from "../assets/projects.json";
import insightsData from "../assets/insights.json";
import SubHeader from '../components/SubHeader.astro';

const base = import.meta.env.BASE_URL;
const projects = projectsData.sort((a, b) => b.views - a.views);
const insights = insightsData.sort((a, b) => b.views - a.views);

const allProjectCategories = projects.flatMap(p => p.category);
const uniqueProjectCategories = [...new Set(allProjectCategories)];

const allInsightCategories = insights.flatMap(i => i.category);
const uniqueInsightCategories = [...new Set(allInsightCategories)];
---

<Layout title="SEMA - ‰ΩúÂìÅ">
